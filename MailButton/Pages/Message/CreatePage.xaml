<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MailButton.Pages.Message.CreatePage"
             Title="CreatePage">
    <VerticalStackLayout>
        <Grid RowDefinitions="*,*,*,*" ColumnDefinitions="*,10,*">
            <Label Grid.Row="0" Grid.Column="0" Text="Email address" VerticalOptions="Center" HorizontalOptions="End" />
            <Entry Grid.Row="0" Grid.Column="2"  Placeholder="Enter email address..." Keyboard="Email" VerticalOptions="Center" />


            <Label Grid.Row="1" Grid.Column="0" Text="Email Title" VerticalOptions="Center" HorizontalOptions="End" />
            <Entry Grid.Row="1" Grid.Column="2" Placeholder="Enter email title..." Keyboard="text" VerticalOptions="Center" />


            <Label Grid.Row="2" Grid.Column="0" Text="Email body" VerticalOptions="Center" HorizontalOptions="End" />
            <Entry Grid.Row="2" Grid.Column="2" Placeholder="Enter Message body..." Keyboard="Text" VerticalOptions="Center" HeightRequest="200" />

            <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Text="Save" />
        </Grid>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>